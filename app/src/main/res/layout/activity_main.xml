<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10C971"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/sing_in"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="123dp"
        android:layout_marginTop="430dp"
        android:background="#C14CD6"
        android:text="Sign In"
        app:backgroundTint="#E1A9D64C" />

    <EditText
        android:id="@+id/Password_Signup"
        style="@style/Base.Widget.MaterialComponents.AutoCompleteTextView"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="335dp"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/Email_Signup"
        android:layout_width="315dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"

        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="416dp"
        android:layout_marginTop="-107dp"
        app:srcCompat="@mipmap/logo" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sing_in"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="94dp"
        android:text="Not a member?"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:layout_marginTop="7dp"
        android:text="Take control of your Money"
        android:textColor="#C2E04A" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:text="Budgety"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginBottom="5dp">

    </TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/sing_in"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="Sign Up"
        android:textAlignment="textStart"
        android:textColor="#E1536138"
        android:textSize="11sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ForgetPassword_Button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="-175dp"
        android:layout_marginTop="385dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="forget password ?"
        android:textAlignment="textStart"
        android:textColor="#E1536138"
        android:textSize="11sp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="81dp"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:progress="@android:integer/config_shortAnimTime"
        android:progressTint="#00D51C1C"
        android:visibility="invisible" />


</RelativeLayout>