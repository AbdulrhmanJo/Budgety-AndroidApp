<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:tint="#10C971"
                app:srcCompat="@drawable/round_account_circle_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Hello, Rayan" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="#10C971"
                app:srcCompat="@drawable/round_notifications_none_24"
                />
        </LinearLayout>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="20dp"
            android:minHeight="200dp"
            android:backgroundTint="#10C971"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_on_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 4,500.00"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:layout_height="80dp"
                 android:layout_marginLeft="30dp"
                 android:layout_marginTop="99dp"
                 android:layout_marginRight="30dp"
                 android:minHeight="200dp"
                 android:backgroundTint="#F9FAFB"
                  app:cardCornerRadius="10dp">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">

                      <LinearLayout
                          android:layout_width="103dp"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                          <ImageView
                              android:layout_width="match_parent"
                              android:layout_height="40dp"
                              app:srcCompat="@drawable/round_keyboard_arrow_up_24"
                              android:tint="#10C971"/>

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Income"
                              android:textStyle="bold"
                              android:textColor="#000"
                              android:layout_gravity="center_horizontal"
                              android:layout_marginTop="-12dp"
                              />


                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="$ 1,200.00"
                              android:textSize="15dp"
                              android:textColor="#10C971"
                              android:layout_gravity="center_horizontal"
                              android:textStyle="bold" />
                      </LinearLayout>

                      <TextView
                          android:layout_width="1dp"
                          android:layout_height="60dp"
                          android:background="#c0c0c0"
                          android:layout_gravity="center_vertical"
                          />

                      <LinearLayout
                          android:layout_width="103dp"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                          <ImageView
                              android:layout_width="match_parent"
                              android:layout_height="30dp"
                              app:srcCompat="@drawable/round_trending_up_24"
                              android:tint="#000000"
                              android:layout_marginTop="6dp"
                              />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Saving"
                              android:textStyle="bold"
                              android:textColor="#000"
                              android:layout_gravity="center_horizontal"
                              android:layout_marginTop="-8dp"
                              />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="$ 1,000.00"
                              android:textSize="15dp"
                              android:textColor="#000000"
                              android:layout_gravity="center_horizontal"
                              android:textStyle="bold" />
                      </LinearLayout>


                      <TextView
                          android:layout_width="1dp"
                          android:layout_height="60dp"
                          android:background="#c0c0c0"
                          android:layout_gravity="center_vertical"/>


                      <LinearLayout
                          android:layout_width="103dp"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                          <ImageView
                              android:layout_width="match_parent"
                              android:layout_height="40dp"
                              app:srcCompat="@drawable/round_keyboard_arrow_down_24"
                              android:tint="#C91010"/>

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Expenses"
                              android:textStyle="bold"
                              android:textColor="#000"
                              android:layout_gravity="center_horizontal"
                              android:layout_marginTop="-12dp"
                              />

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="$ 570.00"
                              android:textSize="15dp"
                              android:textColor="#C91010"
                              android:layout_gravity="center_horizontal"
                              android:textStyle="bold" />
                      </LinearLayout>

                  </LinearLayout>
             </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp">

        <TextView
            android:id="@+id/elements"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Today"
            android:padding="25dp"/>

    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/cardview_light_background"
            app:menu="@menu/bottom_nav_menu"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>