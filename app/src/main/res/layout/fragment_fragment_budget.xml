<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_budget">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#10C971"
            android:minHeight="?attr/actionBarSize"
            android:textDirection="firstStrong"
            app:menu="@menu/top_nav_menu"
            app:navigationIcon="@drawable/round_account_circle_24">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Budgety" />


        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="56dp"
          >

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/toolbar"
                android:backgroundTint="#10C971"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#10C971"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="Total Savings"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="$ 18,300.00"
                            android:textColor="#fff"
                            android:textSize="40dp"
                            android:textStyle="bold" />
                        
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_below="@id/container"
              >
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="20dp"

                    android:id="@+id/container1">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budgets"
                        android:fontFamily="sans-serif-medium"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        />
                    
                    <Button
                        android:id="@+id/add_budget"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="new"
                        android:textSize="12dp"
                        />
                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/container1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="13dp"
                            android:layout_marginLeft="13dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp"

                                >


                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="29dp"
                                    android:text="Budget Name"
                                    android:gravity="center_vertical"
                                    android:textSize="12dp"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"

                                    android:layout_marginBottom="10dp">

                                    <TextView
                                        android:id="@+id/textView11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="$ 4,000.00"
                                        android:textColor="#D2242020"
                                        android:fontFamily="sans-serif-medium"
                                        android:textSize="22sp" />

                                    <TextView
                                        android:id="@+id/textView10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$5,000.00"
                                        android:textAlignment="center" />
                                </LinearLayout>

                                <SeekBar
                                    android:id="@+id/seekBar5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#10C971"
                                    android:progressTint="#10C971"
                                    android:thumbTint="#10C971"

                                    />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="13dp"
                            android:layout_marginLeft="13dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp"

                                >


                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="29dp"
                                    android:text="Budget Name"
                                    android:gravity="center_vertical"
                                    android:textSize="12dp"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"

                                    android:layout_marginBottom="10dp">

                                    <TextView
                                        android:id="@+id/textView11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="$ 5,500.00"
                                        android:textColor="#D2242020"
                                        android:fontFamily="sans-serif-medium"
                                        android:textSize="22sp" />

                                    <TextView
                                        android:id="@+id/textView10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$9,000.00"
                                        android:textAlignment="center" />
                                </LinearLayout>

                                <SeekBar
                                    android:id="@+id/seekBar5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#10C971"
                                    android:progressTint="#10C971"
                                    android:thumbTint="#10C971"

                                    />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="13dp"
                            android:layout_marginLeft="13dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp"

                                >


                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="29dp"
                                    android:text="Budget Name"
                                    android:gravity="center_vertical"
                                    android:textSize="12dp"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"

                                    android:layout_marginBottom="10dp">

                                    <TextView
                                        android:id="@+id/textView11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="$ 10,000.00"
                                        android:textColor="#D2242020"
                                        android:fontFamily="sans-serif-medium"
                                        android:textSize="22sp" />

                                    <TextView
                                        android:id="@+id/textView10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$15,000.00"
                                        android:textAlignment="center" />
                                </LinearLayout>

                                <SeekBar
                                    android:id="@+id/seekBar5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#10C971"
                                    android:progressTint="#10C971"
                                    android:thumbTint="#10C971"

                                    />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="13dp"
                            android:layout_marginLeft="13dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            android:layout_marginBottom="100dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="20dp"

                                >


                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="29dp"
                                    android:text="Budget Name"
                                    android:gravity="center_vertical"
                                    android:textSize="12dp"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"

                                    android:layout_marginBottom="10dp">

                                    <TextView
                                        android:id="@+id/textView11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="$ 50,000.00"
                                        android:textColor="#D2242020"
                                        android:fontFamily="sans-serif-medium"
                                        android:textSize="22sp" />

                                    <TextView
                                        android:id="@+id/textView10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$100,000.00"
                                        android:textAlignment="center" />
                                </LinearLayout>

                                <SeekBar
                                    android:id="@+id/seekBar5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#10C971"
                                    android:progressTint="#10C971"
                                    android:thumbTint="#10C971"

                                    />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>





                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

<!--    <include layout="@layout/fragment_add_budget"></include>-->


</FrameLayout>