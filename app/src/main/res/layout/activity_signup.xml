<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10C971"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/SignUp_Action"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="123dp"
        android:layout_marginTop="490dp"
        android:background="#C14CD6"
        android:text="Sign up"
        app:backgroundTint="#E1A9D64C" />

    <EditText
        android:id="@+id/password_username"
        style="@style/Base.Widget.MaterialComponents.AutoCompleteTextView"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="335dp"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPassword" />


    <EditText
        android:id="@+id/password_SignIn"
        style="@style/Base.Widget.MaterialComponents.AutoCompleteTextView"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="399dp"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />


    <EditText
        android:id="@+id/Email_SignIn"
        android:layout_width="315dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="416dp"
        android:layout_marginTop="-107dp"
        app:srcCompat="@mipmap/logo" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignUp_Action"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="94dp"
        android:text="Already have an account?"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:layout_marginTop="7dp"
        android:text="Take control of your Money"
        android:textColor="#C2E04A" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:text="Budgety"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginBottom="5dp">

    </TextView>

    <!--    <TextView-->
    <!--        android:id="@+id/Wrong"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="400dp"-->
    <!--        android:layout_marginStart="48dp"-->
    <!--        android:textColor="#FF0000"-->
    <!--        android:fontFamily="sans-serif-medium"/>-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signIn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@+id/SignUp_Action"
        android:layout_marginLeft="-18dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="Sign in"
        android:textColor="#E1536138"
        android:textSize="11sp" />


</RelativeLayout>